{
  "name": "ai-cli",
  "version": "0.2.3",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --minify --sourcemap --define __VERSION__='\"'$(jq -r .version package.json)'\"' --outfile ai",
    "build:linux": "bun build src/index.ts --compile --minify --target=bun-linux-x64 --define __VERSION__='\"'$(jq -r .version package.json)'\"' --outfile ai-linux-x64",
    "build:linux-arm": "bun build src/index.ts --compile --minify --target=bun-linux-arm64 --define __VERSION__='\"'$(jq -r .version package.json)'\"' --outfile ai-linux-arm64"
  },
  "dependencies": {
    "marked": "^17.0.1",
    "marked-terminal": "^7.3.0",
    "ora": "^8.0.1",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}

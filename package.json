{
  "name": "ai-cli",
  "version": "0.1.0",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --minify --sourcemap --outfile ai",
    "build:linux": "bun build src/index.ts --compile --minify --target=bun-linux-x64 --outfile ai-linux",
    "build:linux-arm": "bun build src/index.ts --compile --minify --target=bun-linux-arm64 --outfile ai-linux-arm"
  },
  "dependencies": {
    "marked": "^17.0.1",
    "marked-terminal": "^7.3.0",
    "ora": "^8.0.1",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
